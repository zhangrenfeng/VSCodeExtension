{
	"name": "color-info",
	"displayName": "Color Info",
	"description": "Provides quick information about css colors",
	"version": "0.5.0",
	"publisher": "bierner",
	"license": "MIT",
	"keywords": [
		"color",
		"rgb",
		"css",
		"hsl",
		"cmyk"
	],
	"icon": "media/logo.svg",
	"galleryBanner": {
		"color": "#fefefe",
		"theme": "light"
	},
	"engines": {
		"vscode": "^1.8.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/mattbierner/vscode-color-info.git"
	},
	"activationEvents": [
		"*",
		"onLanguage:css",
		"onLanguage:less",
		"onLanguage:sass"
	],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Color-Info configuration",
			"properties": {
				"colorInfo.fields": {
					"type": [
						"array",
						"null"
					],
					"default": null,
					"items": {
						"type": "string",
						"enum": [
							"alpha",
							"cmyk",
							"css-color-name",
							"hex",
							"hsl",
							"hsv",
							"lab",
							"preview-square-xl",
							"preview-square",
							"preview-xl",
							"preview",
							"rgb"
						],
						"description": "Color field id"
					},
					"description": "Ordered list of color fields to display."
				},
				"colorInfo.excludedFields": {
					"type": "array",
					"default": null,
					"items": {
						"type": "string",
						"enum": [
							"alpha",
							"cmyk",
							"css-color-name",
							"hex",
							"hsl",
							"hsv",
							"lab",
							"preview-square-xl",
							"preview-square",
							"preview-xl",
							"preview",
							"rgb"
						],
						"description": "Color field id"
					},
					"description": "Color fields not to display. Overrides `colorInfo.fields`."
				},
				"colorInfo.languages": {
					"type": "array",
					"default": [
						{
							"selector": "css",
							"colors": "css"
						},
						{
							"selector": "sass",
							"colors": "css"
						},
						{
							"selector": "scss",
							"colors": "css"
						},
						{
							"selector": "less",
							"colors": "css"
						}
					],
					"items": {
						"type": "object",
						"properties": {
							"selector": {
								"type": [
									"string",
									"object"
								],
								"description": "Document selector for language or file. See https://code.visualstudio.com/Docs/extensionAPI/vscode-api#DocumentSelector"
							},
							"colors": {
								"type": [
									"array",
									"string"
								],
								"default": "css",
								"description": "Types of colors to detect",
								"items": {
									"enum": [
										"css",
										"hex",
										"hex+alpha",
										"rgb",
										"hsl",
										"css-color-names"
									]
								}
							}
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"@types/node": "^6.0.52",
		"typescript": "^2.1.4",
		"vscode": "^1.0.3"
	},
	"dependencies": {
		"color-convert": "^1.7.0",
		"datauri": "^1.0.4",
		"pad": "^1.0.2",
		"tinycolor2": "^1.4.1"
	},
	"__metadata": {
		"id": "0f8bd812-5d52-4fff-bd1c-6b0a7ee9cad9",
		"publisherId": "f164f116-e2aa-496b-84dc-2451248e8beb",
		"publisherDisplayName": "Matt Bierner"
	}
}