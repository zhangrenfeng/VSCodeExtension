{
	"comments": {
		"blockComment": [ "<!--", "-->" ]
	},
	"wordPattern": "[\\w-]+",
	"indentationRules": {
		"increaseIndentPattern": "<[^/!]*>\\s*$",
		"decreaseIndentPattern": "^\\s*</"
	},
	"autoClosingPairs": [
		{ "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
		{ "open": "{", "close": "}", "notIn": ["comment"] },
		{ "open": "'", "close": "'", "notIn": ["string", "comment"] },
		{ "open": "<!--", "close": "-->", "notIn": ["string", "comment"] }
	],
	"autoCloseBefore": "'\"/,}])<> \n\t",
	"surroundingPairs": [
		["{", "}"],
		["'", "'"],
		["\"", "\""]
	]
}