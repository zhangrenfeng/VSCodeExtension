{
	"scopeName": "source.axml",
	"name": "AXML",
	"fileTypes": [
		"axml"
	],
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"begin": "(<)((?:([-_a-zA-Z0-9]+)(:))?([-_a-zA-Z0-9:]+))(?=(\\s[^>]*)?></\\2>)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.axml"
				},
				"2": {
					"name": "entity.name.tag.axml"
				},
				"3": {
					"name": "entity.name.tag.namespace.axml"
				},
				"4": {
					"name": "punctuation.separator.namespace.axml"
				},
				"5": {
					"name": "entity.name.tag.localname.axml"
				}
			},
			"end": "(>)(</)((?:([-_a-zA-Z0-9]+)(:))?([-_a-zA-Z0-9:]+))(>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.axml"
				},
				"2": {
					"name": "punctuation.definition.tag.axml"
				},
				"3": {
					"name": "entity.name.tag.axml"
				},
				"4": {
					"name": "entity.name.tag.namespace.axml"
				},
				"5": {
					"name": "punctuation.separator.namespace.axml"
				},
				"6": {
					"name": "entity.name.tag.localname.axml"
				},
				"7": {
					"name": "punctuation.definition.tag.axml"
				}
			},
			"name": "meta.tag.no-content.axml",
			"patterns": [
				{
					"include": "#tagStuff"
				}
			]
		},
		{
			"begin": "(</?)(?:([-\\w\\.]+)((:)))?([-\\w\\.:]+)",
			"captures": {
				"1": {
					"name": "punctuation.definition.tag.axml"
				},
				"2": {
					"name": "entity.name.tag.namespace.axml"
				},
				"3": {
					"name": "entity.name.tag.axml"
				},
				"4": {
					"name": "punctuation.separator.namespace.axml"
				},
				"5": {
					"name": "entity.name.tag.localname.axml"
				}
			},
			"end": "(/?>)",
			"name": "meta.tag.axml",
			"patterns": [
				{
					"include": "#tagStuff"
				}
			]
		},
		{
			"include": "#axml-exp"
		}
	],
	"repository": {
		"doublequotedString": {
			"begin": "\"",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.axml"
				}
			},
			"end": "\"",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.axml"
				}
			},
			"name": "string.quoted.double.axml",
			"patterns": [
				{
					"include": "#axml-exp"
				}
			]
		},
		"singlequotedString": {
			"begin": "'",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.axml"
				}
			},
			"end": "'",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.axml"
				}
			},
			"name": "string.quoted.single.axml",
			"patterns": [
				{
					"include": "#axml-exp"
				}
			]
		},
		"tagStuff": {
			"patterns": [
				{
					"captures": {
						"1": {
							"name": "entity.other.attribute-name.namespace.axml"
						},
						"2": {
							"name": "entity.other.attribute-name.axml"
						},
						"3": {
							"name": "punctuation.separator.namespace.axml"
						},
						"4": {
							"name": "entity.other.attribute-name.localname.axml"
						}
					},
					"match": "(?:^|\\s+)(?:([-\\w.]+)((:)))?([-\\w.:]+)(?=[^-\\w.:])"
				},
				{
					"include": "#doublequotedString"
				},
				{
					"include": "#singlequotedString"
				},
				{
					"include": "#axml-exp"
				}
			]
		},
		"comments": {
			"begin": "<!--",
			"captures": {
				"0": {
					"name": "punctuation.definition.comment.axml"
				}
			},
			"end": "-->",
			"name": "comment.block.axml"
		},
		"axml-exp": {
			"begin": "\\{\\{",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.exp.axml"
				}
			},
			"end": "}}",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.exp.axml"
				}
			},
			"name": "variable.exp.language.axml",
			"patterns": [
				{
					"include": "source.axml-exp"
				}
			]
		}
	}
}