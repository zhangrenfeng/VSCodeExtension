{
	"name": "kobex-vscode",
	"displayName": "kobex-vscode",
	"description": "",
	"version": "0.1.11",
	"publisher": "Sleen",
	"repository": {
		"type": "git",
		"url": "git@gitlab.alibaba-inc.com:kobex/kobex-vscode.git"
	},
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/app.json",
		"onLanguage:axml"
	],
	"icon": "media/kobex.png",
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "axml",
				"aliases": [
					"AXML"
				],
				"extensions": [
					".axml"
				],
				"configuration": "./languages/axml/language-configuration.json"
			},
			{
				"id": "axml-exp",
				"configuration": "./languages/axml-exp/language-configuration.json"
			},
			{
				"id": "css",
				"extensions": [
					".acss"
				]
			}
		],
		"grammars": [
			{
				"language": "axml",
				"scopeName": "source.axml",
				"path": "./languages/axml/axml.tmLanguage.json"
			},
			{
				"language": "axml-exp",
				"scopeName": "source.axml-exp",
				"path": "./languages/axml-exp/axml-exp.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "kobex.createPage",
				"title": "新建小程序页面",
				"category": "Kobex"
			},
			{
				"command": "kobex.createComponent",
				"title": "新建小程序组件",
				"category": "Kobex"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "kobex.createComponent",
					"group": "Kobex",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "kobex.createPage",
					"group": "Kobex",
					"when": "explorerResourceIsFolder"
				}
			]
		},
		"configurationDefaults": {
			"[axml]": {
				"editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
				"editor.quickSuggestions": {
					"other": true,
					"comments": false,
					"strings": true
				},
				"editor.suggest.snippetsPreventQuickSuggestions": false
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b ./",
		"watch": "tsc -b -w",
		"postinstall": "node ./node_modules/vscode/bin/install && cd languages/axml/server && npm install && cd ../../json/server && npm install && cd ../../..",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"fs-extra": "^7.0.1",
		"jsonc-parser": "^2.0.2",
		"vscode-languageclient": "^5.2.1"
	},
	"devDependencies": {
		"@types/fs-extra": "^5.0.4",
		"@types/mocha": "^2.2.42",
		"@types/node": "^8.10.25",
		"tslint": "^5.11.0",
		"typescript": "^3.1.3",
		"vscode": "^1.1.30"
	},
	"__metadata": {
		"id": "c311a98a-2790-43b9-a5c8-b8743639db80",
		"publisherId": "80042e44-14f5-40f5-bdf2-0850e524ba14",
		"publisherDisplayName": "Sleen"
	}
}